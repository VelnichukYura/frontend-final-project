extends ./layouts/main.jade
include ./layouts/mixin
block content
  main
    section.full-width.account-section
      div.main-width
        div.account-left
          span custom care:
          |  557-23-4555
        div.account-right
          div.search
            input(type='text')
          div.account-page-link
            div.account-icon
            img(src='images/account-icon.png')
            a(href='#') my account
          div.currency-switcher
            select
              option $ US
              option € EUR
              option £ GBP
      div.clearfix
    section.header-section
      header.main-width
        div.logo
          a(href='#')
            img(src='images/site-logo.png')
        nav
          ul
            li
              a(href='#') new
            li
              a(href='#') designers
            li
              a(href='#') women
            li
              a(href='#') men
            li
              a(href='#') clearence
        div.cart
          div.cart-header
            | Your cart
            span.triangle-down
          div.cart-total
            span 0 items | $ 0
      div.clearfix
      section.full-width.home-carousel
        div.jcarousel-full
          ul
            li
              +slide('/images/slide-1.png', '/images/slide-1-1.png')
            li
              +slide('/images/slide-1.png')
            li
              +slide('/images/slide-1.png')
        a.jcarousel-control-prev(href='#' data-jcarouselcontrol='true')
        a.jcarousel-control-next(href='#' data-jcarouselcontrol='true')
        p.jcarousel-pagination(data-jcarouselcontrol='true')
          a(href='#')
          a(href='#')
          a(href='#')
      div.clearfix
      section.middle-line.full-width
        div.main-width
          div.email-form
            form(name='email', method='post')
              span Stay updated
              input(type='text', name='title' placeholder='Your email adress')
              button
                i.fa.fa-plus
          div.social-icons
            span Find us here
            a(href='#', target='_blank')
              i.fa.fa-facebook
            a(href='#', target='_blank')
              i.fa.fa-twitter
            a(href='#', target='_blank')
              i.fa.fa-instagram
      div.clearfix
      section.picture-blocks
        .main-width
          a(href="#")
            div.left-pic-set
              img(src='images/left-pic.jpg', alt='')
          div.right-pic-set
            a(href="#")
              div.top-pic
                img(src='images/right-top-pic.jpg', alt='')
            a(href="#")
              div.bottom-left-pic
                img(src='images/bottom-left-pic.jpg', alt='')
            a(href="#")
              div.bottom-right-pic
                img(src='images/bottom-right-pic.jpg', alt='')
      section.full-width.products-blocks
        div#tabs_hot
          div.products-jcarousel-wrapper
            div.products-jcarousel#products-hot
          ul
            li
              +product('/images/product-1.png', 'Product 1', '55', '/images/label.png')
            li
              +product('/images/product-2.png', 'Product 2', '55', false)
            li
              +product('/images/product-3.png', 'Product 3', '55', '/images/label.png')
            li
              +product('/images/product-4.png', 'Product 4', '55', '/images/label.png')
            li
              +product('/images/product-1.png', 'Product 1', '55', '/images/label.png')
            li
              +product('/images/product-2.png', 'Product 2', '55', false)
            li
              +product('/images/product-3.png', 'Product 3', '55', '/images/label.png')
            li
              +product('/images/product-4.png', 'Product 4', '55', '/images/label.png')
            li
              +product('/images/product-1.png', 'Product 1', '55', '/images/label.png')
            li
              +product('/images/product-2.png', 'Product 2', '55', false)
            li
              +product('/images/product-3.png', 'Product 3', '55', '/images/label.png')
            li
              +product('/images/product-4.png', 'Product 4', '55', '/images/label.png')
        div#tabs-designers
          div.products-jcarousel-wrapper
            div.products-jcarousel#products-designers
              ul
                li
                  +product('/images/product-1.png', 'Product 1', '55', true)
                li
                  +product('/images/product-2.png', 'Product 2', '55', false)
                li
                  +product('/images/product-3.png', 'Product 3', '55', true)
                li
                  +product('/images/product-4.png', 'Product 4', '55', true)
        div#tabs-featured
          div.products-jcarousel-wrapper
            div.products-jcarousel#products-featured
              ul
                li
                  +product('/images/product-1.png', 'Product 1', '55', true)
                li
                  +product('/images/product-2.png', 'Product 2', '55', false)
                li
                  +product('/images/product-3.png', 'Product 3', '55', true)
                li
                  +product('/images/product-4.png', 'Product 4', '55', true)
        div#tabs-latest
          div.products-jcarousel-wrapper
            div.products-jcarousel#products-latest
              ul
                li
                  +product('/images/product-1.png', 'Product 1', '55', true)
                li
                  +product('/images/product-2.png', 'Product 2', '55', false)
                li
                  +product('/images/product-3.png', 'Product 3', '55', true)
                li
                  +product('/images/product-4.png', 'Product 4', '55', true)
      section.full-width.home-label
      div.main-width
        fieldset
          legend(align='center')
            img(src='images/home-label.png')