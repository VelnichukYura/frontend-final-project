extends ./layouts/main.jade
block content
    main
        section.full-width.account-section
            div.main-width
                +accountSection
        div.clearfix
        section.full-width.header-section
            header.header-width
                div.logo
                    a(href="index.html")
                        img(src="/images/logo.png")
                div.nav-menu
                    ul
                        li: a(href="#") new
                        li: a(href="#") designers
                        li: a(href="#") women
                        li: a(href="#") men
                        li: a(href="#") clearence
                div.my-purchases
                    div.block.left
                        div.block.cart
                            | Your cart
                            span.triangle-down
                        div.basket
                            span items  |  $ 0
        div.clearfix
        section.full-width.slide-section
          div.slide-width
              div#jcarousel
                  input#slide1(type="radio" name="slides" checked)
                  input#slide2(type="radio" name="slides")
                  input#slide3(type="radio" name="slides")
                  input#slide4(type="radio" name="slides")
                  input#slide5(type="radio" name="slides")
