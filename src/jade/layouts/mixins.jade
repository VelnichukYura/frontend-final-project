mixin product(image, title, price, label)
  div.product-wrapper
    div.product
      div.link
         a(href='#') shop it
      div.image
        if(label)
          div.label
            img(src=label)
        img(src=image)
      div.title
        h3
          a(href='')= title
      div.price
        | $
        span= price
      div.cart
        button
          | Add to cart
          i.fa.fa-plus

